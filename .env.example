# Copy to .env.local and fill in values (never commit .env.local)
# Required
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB
NEXTAUTH_SECRET=replace_with_random_base64
NEXTAUTH_URL=http://localhost:3000

# Build-time (client bundle) if used
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email (required if email features are enabled)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=example@yourdomain.com
SMTP_PASS=replace_me
SMTP_FROM="Canopy Forms <example@yourdomain.com>"

# Optional bootstrap
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
